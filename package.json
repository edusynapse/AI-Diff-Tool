{
  "name": "ai-diff-tool",
  "version": "1.0.4",
  "description": "Desktop app to apply diff patches using Grok 4 API",
  "main": "lib/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist:win:docker": "docker run --rm -t -v \"$PWD\":/project -w /project -v \"$HOME/.cache/electron\":/root/.cache/electron -v \"$HOME/.cache/electron-builder\":/root/.cache/electron-builder electronuserland/builder:wine bash -lc \"npm ci && npx electron-builder --win portable --x64\"",
    "dist:mac": "electron-builder --mac zip --x64 --arm64"
  },
  "author": "Surajit Ray",
  "license": "MIT",
  "dependencies": {
    "diff": "^5.2.0",
    "diff2html": "^3.4.52",
    "openai": "^4.24.1"
  },
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.example.aidifftool",
    "productName": "AI Diff Tool",
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    },
    "win": {
      "target": [{ "target": "portable", "arch": ["x64"] }],
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": [{ "target": "zip", "arch": ["x64", "arm64"] }],
      "icon": "build/icons/icon.icns"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons"
      },
      {
        "from": "build/languages",
        "to": "languages"
      },
      {
        "from": "build/creator.png",
        "to": "creator.png"
      },
      {
        "from": "build/icons/128x128.png",
        "to": "app-icon.png"
      }
    ]
  }
}